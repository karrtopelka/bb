@model Project


<div class="card mx-auto" style="width: max-content;">
    <div class="card-body">
        <h1>Create project</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" style="width: 765px;">
            <div class="form-group">
                <label>Project Name</label>
                <input name="projectname" class="form-control" required/>
            </div>
            <div class="form-group mt-2">
                <label>Project description (optional)</label>
                <input name="projectdescription" class="form-control"/>
            </div>
            <button class="btn btn-primary mt-4 w-100" type="submit">Create</button>
        </form>
    </div>
</div>